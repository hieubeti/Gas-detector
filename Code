#define BLYNK_TEMPLATE_ID "TMPL68VT6L-R8"
#define BLYNK_TEMPLATE_NAME "MQ2"
#define BLYNK_AUTH_TOKEN "47fHh4sYkhSMmkJOk7I1d8e731eOK6I0"

#include <WiFi.h>
#include <WiFiClient.h>
#include <BlynkSimpleEsp32.h>

// ===== WIFI =====
char ssid[] = "hieu";
char pass[] = "190402005";

// ===== CHÂN =====
const int MQ2_PIN   = 34;
const int GREEN_LED = 18;
const int RED_LED   = 19;
const int BUZZER    = 21;

// ===== NGƯỠNG =====
const int GAS_THRESHOLD = 200;

BlynkTimer timer;
bool blynkConnected = false;

// ===== ĐỌC CẢM BIẾN =====
void sendSensorData() {
  int gasValue = analogRead(MQ2_PIN);

  // ===== LOGIC CẢNH BÁO (LUÔN CHẠY) =====
  if (gasValue >= GAS_THRESHOLD) {
    digitalWrite(GREEN_LED, LOW);
    digitalWrite(RED_LED, HIGH);
    digitalWrite(BUZZER, HIGH);
  } else {
    digitalWrite(GREEN_LED, HIGH);
    digitalWrite(RED_LED, LOW);
    digitalWrite(BUZZER, LOW);
  }

  // ===== GỬI BLYNK NẾU CÓ KẾT NỐI =====
  if (blynkConnected) {
    Blynk.virtualWrite(V0, gasValue);
  }

  // Debug
  Serial.print("Gas: ");
  Serial.print(gasValue);
  Serial.print(" | WiFi: ");
  Serial.print(WiFi.status() == WL_CONNECTED ? "OK" : "NO");
  Serial.print(" | Blynk: ");
  Serial.println(blynkConnected ? "OK" : "OFF");
}

void connectWiFi() {
  Serial.println("Connecting WiFi...");
  WiFi.begin(ssid, pass);

  unsigned long start = millis();
  while (WiFi.status() != WL_CONNECTED && millis() - start < 5000) {
    delay(500);
    Serial.print(".");
  }

  if (WiFi.status() == WL_CONNECTED) {
    Serial.println("\nWiFi connected");
    Blynk.config(BLYNK_AUTH_TOKEN);
    blynkConnected = Blynk.connect(3000); // timeout 3s
  } else {
    Serial.println("\nWiFi FAILED → OFFLINE MODE");
    blynkConnected = false;
  }
}

void setup() {
  Serial.begin(115200);

  pinMode(GREEN_LED, OUTPUT);
  pinMode(RED_LED, OUTPUT);
  pinMode(BUZZER, OUTPUT);

  digitalWrite(GREEN_LED, HIGH);
  digitalWrite(RED_LED, LOW);
  digitalWrite(BUZZER, LOW);

  analogReadResolution(12);
  analogSetAttenuation(ADC_11db);

  connectWiFi();

  timer.setInterval(1000L, sendSensorData);
}

void loop() {
  if (blynkConnected) {
    Blynk.run();
  }
  timer.run();
}
