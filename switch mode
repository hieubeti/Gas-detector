#define BLYNK_TEMPLATE_ID "TMPL68VT6L-R8"
#define BLYNK_TEMPLATE_NAME "MQ2"
#define BLYNK_AUTH_TOKEN "47fHh4sYkhSMmkJOk7I1d8e731eOK6I0"

#include <WiFi.h>
#include <WiFiClient.h>
#include <BlynkSimpleEsp32.h>

// ===== WIFI =====
char ssid[] = "hieu";
char pass[] = "190402005";

// ===== CHÂN =====
const int MQ2_PIN   = 34;   // AO MQ-2
const int GREEN_LED = 18;   // LED xanh
const int RED_LED   = 19;   // LED đỏ
const int BUZZER    = 21;   // Còi

// ===== NGƯỠNG =====
const int GAS_THRESHOLD = 15;

// ===== BIẾN ĐIỀU KHIỂN CÒI =====
bool buzzerEnable = true;   // true = cho phép còi kêu

BlynkTimer timer;

// ===== NHẬN LỆNH TỪ BLYNK (BUTTON V1) =====
BLYNK_WRITE(V1) {
  buzzerEnable = param.asInt(); // 1 = bật còi, 0 = tắt còi
}

// ===== ĐỌC CẢM BIẾN =====
void sendSensorData() {
  int gasValue = analogRead(MQ2_PIN);

  // Gửi giá trị lên Blynk
  Blynk.virtualWrite(V0, gasValue);

  // ===== LOGIC CẢNH BÁO =====
  if (gasValue >= GAS_THRESHOLD) {
    digitalWrite(GREEN_LED, LOW);
    digitalWrite(RED_LED, HIGH);
    digitalWrite(BUZZER, buzzerEnable ? HIGH : LOW);
  } else {
    digitalWrite(GREEN_LED, HIGH);
    digitalWrite(RED_LED, LOW);
    digitalWrite(BUZZER, LOW);
  }

  // Debug
  Serial.print("Gas: ");
  Serial.print(gasValue);
  Serial.print(" | BuzzerEnable: ");
  Serial.println(buzzerEnable);
}

void setup() {
  Serial.begin(115200);

  pinMode(GREEN_LED, OUTPUT);
  pinMode(RED_LED, OUTPUT);
  pinMode(BUZZER, OUTPUT);

  // Trạng thái ban đầu
  digitalWrite(GREEN_LED, HIGH);
  digitalWrite(RED_LED, LOW);
  digitalWrite(BUZZER, LOW);

  // ADC ESP32
  analogReadResolution(12);
  analogSetAttenuation(ADC_11db);

  // Kết nối Blynk
  Blynk.begin(BLYNK_AUTH_TOKEN, ssid, pass);

  // Đọc cảm biến mỗi 1 giây
  timer.setInterval(1000L, sendSensorData);
}

void loop() {
  Blynk.run();
  timer.run();
}
