#define BLYNK_TEMPLATE_ID "TMPL68VT6L-R8"
#define BLYNK_TEMPLATE_NAME "MQ2"
#define BLYNK_AUTH_TOKEN "47fHh4sYkhSMmkJOk7I1d8e731eOK6I0"

#include <WiFi.h>
#include <WiFiClient.h>
#include <BlynkSimpleEsp32.h>

// ===== WIFI =====
char ssid[] = "hieubinh";
char pass[] = "kienhieu";

// ===== CHÂN =====
const int MQ2_PIN   = 34;
const int GREEN_LED = 18;
const int RED_LED   = 19;
const int BUZZER    = 21;

// ===== NGƯỠNG =====
const int GAS_THRESHOLD = 50;

// ===== BIẾN ĐIỀU KHIỂN =====
bool buzzerEnable = true;     // Cho phép còi
bool blynkOnline  = false;   // Trạng thái Blynk

BlynkTimer timer;

// ===== NÚT BLYNK V1 (BẬT/TẮT CÒI) =====
BLYNK_WRITE(V1) {
  buzzerEnable = param.asInt();
}

// ===== ĐỌC MQ2 =====
void readGasSensor() {
  int gasValue = analogRead(MQ2_PIN);

  // Gửi lên Blynk nếu ONLINE
  if (blynkOnline) {
    Blynk.virtualWrite(V0, gasValue);
  }

  // ===== LOGIC OFFLINE / ONLINE =====
  if (gasValue >= GAS_THRESHOLD) {
    digitalWrite(GREEN_LED, LOW);
    digitalWrite(RED_LED, HIGH);
    digitalWrite(BUZZER, buzzerEnable ? HIGH : LOW);
  } else {
    digitalWrite(GREEN_LED, HIGH);
    digitalWrite(RED_LED, LOW);
    digitalWrite(BUZZER, LOW);
  }

  Serial.print("Gas: ");
  Serial.print(gasValue);
  Serial.print(" | WiFi: ");
  Serial.print(WiFi.status() == WL_CONNECTED ? "OK" : "OFF");
  Serial.print(" | Blynk: ");
  Serial.println(blynkOnline ? "ON" : "OFF");
}

// ===== KẾT NỐI WIFI + BLYNK (KHÔNG BLOCK) =====
void connectWiFiBlynk() {
  if (WiFi.status() != WL_CONNECTED) {
    WiFi.begin(ssid, pass);
    Serial.println("Trying WiFi...");
    return;
  }

  if (!Blynk.connected()) {
    Blynk.config(BLYNK_AUTH_TOKEN);
    if (Blynk.connect(1000)) {
      blynkOnline = true;
      Serial.println("Blynk connected");
    } else {
      blynkOnline = false;
    }
  }
}

void setup() {
  Serial.begin(115200);

  pinMode(GREEN_LED, OUTPUT);
  pinMode(RED_LED, OUTPUT);
  pinMode(BUZZER, OUTPUT);

  digitalWrite(GREEN_LED, HIGH);
  digitalWrite(RED_LED, LOW);
  digitalWrite(BUZZER, LOW);

  analogReadResolution(12);
  analogSetAttenuation(ADC_11db);

  WiFi.mode(WIFI_STA);
  WiFi.disconnect();

  // Đọc MQ2 mỗi 1 giây (OFFLINE vẫn chạy)
  timer.setInterval(1000L, readGasSensor);

  // Thử kết nối WiFi + Blynk mỗi 5 giây
  timer.setInterval(5000L, connectWiFiBlynk);
}

void loop() {
  if (blynkOnline) {
    Blynk.run();
  }
  timer.run();
}
